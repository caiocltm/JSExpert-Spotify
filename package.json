{
	"name": "jsexpert-spotify",
	"version": "1.0.0",
	"type": "module",
	"description": "Seja bem vindo(a) à sexta Semana Javascript Expert. Este é o código inicial para iniciar nossa jornada.",
	"main": "index.js",
	"scripts": {
		"format": "prettier --write \"server/**/**/*.js\" \"tests/**/**/**/*.js\"",
		"lint": "eslint '{server,tests}/**/**/**/**/*.js' --fix",
		"live-reload": "LOG_ENABLED=true nodemon server/index.js",
		"start": "LOG_ENABLED=true node server/index.js",
		"test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --no-cache --detectOpenHandles",
		"test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --no-cache --detectOpenHandles --watchAll",
		"test:watch:e2e": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --no-cache --detectOpenHandles --watchAll tests/e2e",
		"test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --no-cache --detectOpenHandles --coverage tests/unit",
		"test:e2e": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --no-cache --detectOpenHandles tests/e2e",
		"live-reload:docker": "docker-compose up --build live-reload",
		"test:coverage:docker": "docker-compose up --build test-coverage",
		"test:docker": "docker-compose up --build test",
		"test:watch:docker": "docker-compose up --build test-watch",
		"test:watch:e2e:docker": "docker-compose up --build test-e2e-watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/caiocltm/JSExpert-Spotify.git"
	},
	"engines": {
		"node": "17"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/caiocltm/JSExpert-Spotify/issues"
	},
	"homepage": "https://github.com/caiocltm/JSExpert-Spotify#readme",
	"devDependencies": {
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.2.0",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"portfinder": "^1.0.28",
		"prettier": "2.6.0",
		"supertest": "^6.2.2"
	},
	"dependencies": {
		"pino": "^7.8.0",
		"pino-pretty": "^7.5.3",
		"throttle": "^1.0.3"
	}
}

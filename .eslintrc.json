{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "jest": true,
        "browser": true,
        "es2021": true
    },
    "plugins": [],
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "root": true,
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "interface-name-prefix": "off",
        "ban-types": "off",
        "class-name-casing": "off",
        "explicit-module-boundary-types": "off",
        "explicit-function-return-type": "off",
        "no-explicit-any": "off",
        "camelcase": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-extra-semi": "warn",
        "no-unused-vars": "warn",
        "return-await": "off",
        "space-before-function-paren": "off",
        "comma-spacing": [
            "warn",
            {
                "before": false,
                "after": true
            }
        ],
        "max-len": [
            "off",
            {
                "code": 140
            }
        ],
        "no-continue": "warn",
        "no-lonely-if": "error",
        "no-multi-assign": "warn",
        "ban-ts-comment": "off"
    }
}